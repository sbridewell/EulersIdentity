<UserControl x:Class="Sde.EulersIdentity.WPF.Views.PolynomialTermControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:Sde.EulersIdentity.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <conv:StringToDoubleConverter x:Key="StringToDoubleConverter" />
    </UserControl.Resources>

    <Grid>
      <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,10">
          <TextBlock Text="Coefficient:" VerticalAlignment="Center" Margin="0,0,5,0" />
          <TextBox 
              x:Name="CoefficientTextBox" 
              Width="100" 
              Margin="0,0,10,0" 
              Text="{Binding Coefficient, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDoubleConverter}}"
              PreviewTextInput="OnPreviewTextInput"
              GotFocus="OnTextBoxGotFocus" />

          <TextBlock Text="Exponent:" VerticalAlignment="Center" Margin="0,0,5,0" />
          <TextBox 
              x:Name="ExponentTextBox" 
              Width="100" 
              Margin="0,0,10,0" 
              Text="{Binding Exponent, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDoubleConverter}}"
              PreviewTextInput="OnPreviewTextInput"
              GotFocus="OnTextBoxGotFocus" />

          <TextBlock Text="Value of x:" VerticalAlignment="Center" Margin="0,0,5,0" />
          <TextBox 
              x:Name="XValueTextBox" 
              Width="100" 
              Text="{Binding XValue, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToDoubleConverter}}"
              PreviewTextInput="OnPreviewTextInput"
              GotFocus="OnTextBoxGotFocus" />
        </StackPanel>

        <TextBlock Text="{Binding PolynomialTermState}" Width="400" TextWrapping="Wrap" Margin="0,10,0,0" />
      </StackPanel>
    </Grid>
</UserControl>